<h1>Listing milestones</h1>

<table>
  <tr>
    <th>Milestone type</th>
    <th>Completed at</th>
    <th>Sequence order</th>
    <th>Project</th>
    <th>Deleted at</th>
    <th>Created At</th>
    <th>Updated At</th>    
    <th colspan="3">Actions</th>
  </tr>

<% @milestones.each do |milestone| %>
  <tr>
    <td><%= milestone.title %></td>
    <td><%= milestone.completed_at %></td>
    <td><%= milestone.sequence_order %></td>
    <td><%= link_to milestone.project.name, project_path(milestone.project) %></td>
    <td><%= milestone.deleted_at %></td>
    <td><%= milestone.created_at %></td>
    <td><%= milestone.updated_at %></td>    
    <td><%= link_to 'Show', project_milestone_path(@project, milestone) %></td>
    <td><%= link_to 'Edit', edit_project_milestone_path(@project, milestone) %></td>
    <td><%= link_to 'Destroy', project_milestone_path(@project, milestone), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Milestone', new_project_milestone_path(@project) %>
